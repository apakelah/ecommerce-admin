<%- include('partials/header') %>

<h1 class="mb-4">Product List</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
            <tr>
                <td><%= product.id %></td>
                <td><strong><%= product.nama_produk %></strong></td>
                <td><span class="badge bg-info"><%= product.kategori %></span></td>
                <td>Rp <%= parseInt(product.harga).toLocaleString('id-ID') %></td>
                <td>
                    <span class="badge <%= product.stok > 20 ? 'bg-success' : 'bg-danger' %>">
                        <%= product.stok %> units
                    </span>
                </td>
                <td><small class="text-muted"><%= product.deskripsi %></small></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<div class="alert alert-info">
    Showing <%= products.length %> products
</div>

<%- include('partials/footer') %>